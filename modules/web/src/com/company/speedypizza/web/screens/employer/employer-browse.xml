<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="employersTable"
        messagesPack="com.company.speedypizza.web.screens.employer">
    <data readOnly="true">
        <collection id="employersDc"
                    class="com.company.speedypizza.entity.Employer"
                    view="employer-view">
            <loader id="employersDl">
                <query>
                    <![CDATA[select e from speedypizza_Employer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="employersTable"
            spacing="true">
        <filter id="filter"
                applyTo="employersTable"
                dataLoader="employersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="employersTable"
                    width="100%"
                    dataContainer="employersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="user"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="employersTable.create"/>
                <button id="editBtn" action="employersTable.edit"/>
                <button id="removeBtn" action="employersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
